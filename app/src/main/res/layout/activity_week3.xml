<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".week3.Week3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_yellow">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_128"
                android:layout_gravity="top"
                android:background="@color/neon_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_64"
                android:layout_gravity="bottom"
                android:background="@color/orange" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_128"
                android:layout_gravity="center"
                android:background="@color/yellow_green">

                <TextView
                    android:layout_width="@dimen/space_64"
                    android:layout_height="@dimen/space_32"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/space_8"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textview_purple"
                    android:layout_width="@dimen/space_32"
                    android:layout_height="@dimen/space_32"
                    android:layout_centerInParent="true"
                    android:background="@color/purple" />


                <TextView
                    android:layout_width="@dimen/space_32"
                    android:layout_height="@dimen/space_64"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/textview_purple"
                    android:background="@color/pink" />
            </RelativeLayout>

        </FrameLayout>

    </LinearLayout>

</ScrollView>